                .form-control
                    input(type='password' autocomplete='off' name='password_again' id='password_again' value='' required)
            .form-group.form-btns
                button(type='submit').btn.btn-primary.btn-submit 保存
                button(type='reset').btn.btn-default.btn-cancel 取消
